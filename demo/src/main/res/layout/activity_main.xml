<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="24dp">

    <Button
        android:id="@+id/button_default_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="onClick"
        android:text="Test default activity"
        tools:ignore="HardcodedText"/>

    <Button
        android:id="@+id/button_support_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:onClick="onClick"
        android:text="Test support fragment"
        tools:ignore="HardcodedText"/>

    <Button
        android:id="@+id/button_integer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:onClick="onClick"
        android:text="Test integer task"
        tools:ignore="HardcodedText"/>

    <Button
        android:id="@+id/button_shutdown_executor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:onClick="onClick"
        android:text="Shutdown executor"
        tools:ignore="HardcodedText"/>

</LinearLayout>